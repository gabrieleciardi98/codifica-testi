                <ab n="1">
                    <s type="sentence" n="s_0">
                        <lb xml:id="LL1.17_f_01_lb" n="0" facs="#LL1.17_f_01"/><hi>Mia cara<abbr> sign.ra</abbr><roleName ref="TEI-ListPerson.xml#VVD" type="honorific"> Marchesa</roleName></hi></s> 
                    <s type="sentence" n="s_1">
                        <lb xml:id="LL1.17_f_02_lb" n="1" facs="#LL1.17_f_02"/>I rimproveri che mi fate fare dal <roleName type="honorific">Duca</roleName>
                        <lb xml:id="LL1.17_f_03_lb" n="2" facs="#LL1.17_f_03"/>mi giungono cari, sebbene non meritati.</s> 
                    <s type="sentence" n="s_2"> Per		                                  
                        <lb xml:id="LL1.17_f_04_lb" n="3" facs="#LL1.17_f_04"/>sistema mai scrivo più lettere ad una persona               
                        <lb xml:id="LL1.17_f_05_lb" n="4" facs="#LL1.17_f_05"/>senza che abbia risposto alla prima;</s> 
                    <s type="sentence" n="s_3">quindi
                        <lb xml:id="LL1.17_f_06_lb" n="5" facs="#LL1.17_f_06"/>ella mi dov</s>
